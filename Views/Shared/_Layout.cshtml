<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Diseño_avanzado</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Diseño_avanzado.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light" style="background: linear-gradient(90deg, #2563eb 60%, #38bdf8 100%);">
            <div class="container">
                <a class="navbar-brand fw-bold text-white fs-4" asp-area="" asp-controller="Home" asp-action="Index" style="letter-spacing:1px;">CalculadoraApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold mx-2" asp-area="" asp-controller="Home" asp-action="Operar">Calculadora</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold mx-2" asp-area="" asp-controller="Home" asp-action="Historial">Historial</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white mx-2" asp-area="" asp-controller="Home" asp-action="Login">Cerrar sesión</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light mt-5">
        <div class="container text-center py-3">
            <span class="fw-bold">&copy; 2025 - Calculadora de Operaciones Avanzada</span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
