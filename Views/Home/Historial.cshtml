@model List<OperacionRegistro>
@{
    ViewData["Title"] = "Historial de Operaciones";
}
<div class="container d-flex justify-content-center align-items-center min-vh-100" style="max-width:900px;">
    <div class="card shadow-lg w-100 border-0 rounded-4" style="background: linear-gradient(135deg, #f8fafc 60%, #e0e7ef 100%);">
        <div class="card-body p-5">
            <h2 class="mb-4 text-center fw-bold text-primary">Historial de Operaciones</h2>
            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info text-center rounded-3 shadow-sm">No hay operaciones registradas.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle rounded-3 overflow-hidden">
                        <thead class="table-light">
                            <tr>
                                <th>Fecha</th>
                                <th>Operación</th>
                                <th>Primer número</th>
                                <th>Segundo número</th>
                                <th>Resultado</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var op in Model)
                        {
                            <tr>
                                <td>@op.Fecha.ToString("g")</td>
                                <td>@op.TipoOperacion</td>
                                <td>@(op.Operandos != null && op.Operandos.Count > 0 ? op.Operandos[0] : "-")</td>
                                <td>@(op.Operandos != null && op.Operandos.Count > 1 ? op.Operandos[1] : "-")</td>
                                <td class="fw-bold">@op.Resultado</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
<style>
    body {
        background: linear-gradient(120deg, #e0e7ef 0%, #f8fafc 100%);
    }
</style>
