@model Usuario
@{
    ViewData["Title"] = "Iniciar Sesión";
}
<div class="container d-flex justify-content-center align-items-center min-vh-100" style="max-width:500px;">
    <div class="card shadow-lg w-100 border-0 rounded-4" style="background: linear-gradient(135deg, #f8fafc 60%, #e0e7ef 100%);">
        <div class="card-body p-5">
            <h2 class="mb-4 text-center fw-bold text-primary">Bienvenido</h2>
            <form asp-action="Login" method="post" autocomplete="off">
                <div class="mb-4">
                    <label for="Username" class="form-label fw-semibold">Usuario</label>
                    <input type="text" class="form-control form-control-lg rounded-3 shadow-sm" id="Username" name="Username" placeholder="Ej: Equipo" required />
                </div>
                <div class="mb-4">
                    <label for="Password" class="form-label fw-semibold">Contraseña</label>
                    <input type="password" class="form-control form-control-lg rounded-3 shadow-sm" id="Password" name="Password" placeholder="Ej: secreto" required />
                </div>
                <button type="submit" class="btn btn-gradient w-100 py-2 fw-bold fs-5 rounded-3" style="background: linear-gradient(90deg, #2563eb 60%, #38bdf8 100%); color: #fff; border: none;">Entrar</button>
            </form>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-4 text-center rounded-3 shadow-sm">@ViewBag.Error</div>
            }
        </div>
    </div>
</div>
<style>
    body {
        background: linear-gradient(120deg, #e0e7ef 0%, #f8fafc 100%);
    }
    .btn-gradient:hover, .btn-gradient:focus {
        background: linear-gradient(90deg, #38bdf8 60%, #2563eb 100%) !important;
        color: #fff !important;
    }
</style>
