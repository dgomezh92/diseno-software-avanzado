@model OperarViewModel
@{
    ViewData["Title"] = "Operar";
}
<div class="container mt-5" style="max-width:500px;">
    <div class="card shadow-lg">
        <div class="card-body">
            <h2 class="mb-4 text-center">Calculadora</h2>
            <form asp-action="Operar" method="post">
                <div class="mb-3">
                    <label for="TipoOperacion" class="form-label">Tipo de operación</label>
                    <select class="form-select" id="TipoOperacion" name="TipoOperacion" required>
                        <option value="Suma">Suma</option>
                        <option value="Resta">Resta</option>
                        <option value="Multiplicacion">Multiplicación</option>
                        <option value="Division">División</option>
                    </select>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <label for="Operando1" class="form-label">Primer número</label>
                        <input type="number" step="any" class="form-control" id="Operando1" name="Operando1" value="@Model.Operando1" required />
                    </div>
                    <div class="col">
                        <label for="Operando2" class="form-label">Segundo número</label>
                        <input type="number" step="any" class="form-control" id="Operando2" name="Operando2" value="@Model.Operando2" required />
                    </div>
                </div>
                <button type="submit" class="btn btn-success w-100">Calcular</button>
            </form>
            @if (!string.IsNullOrEmpty(Model?.Mensaje))
            {
                <div class="alert alert-warning mt-3">@Model.Mensaje</div>
            }
            @if (Model != null && Model.Resultado != null)
            {
                <div class="alert alert-info mt-4 text-center">
                    <strong>Resultado:</strong> <span class="fs-4">@Model.Resultado</span>
                </div>
            }
        </div>
    </div>
</div>
